@{
    ViewData["Title"] = "Home Page";
}

@section Scripts {
    <script>
        document.body.classList.add('home-bg');
    </script>
}

<!-- CSS responsivo movido para site.css para evitar erro de Razor -->

<div class="home-responsive-flex" style="display: flex; justify-content: center; align-items: flex-start; gap: 3vw; margin-top: 40px; flex-wrap: wrap;">
    <div style="display: flex; flex-direction: column; gap: 2vw; min-width: 270px; max-width: 350px;">
        <div style="background: rgba(255,255,255,0.97); padding: 2rem 1.2rem; border-radius: 16px; box-shadow: 0 2px 16px rgba(0,0,0,0.08); font-size: 1.05rem;">
            <h4 style="margin-top: 0.5rem; margin-bottom: 0.7rem; font-weight: 600; color: #263278; text-align: center;">Controle de Preços e Cotações</h4>
            <ul style="list-style: none; padding: 0; margin: 0 0 1.2rem 0;">
                <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Valor Cotado (R$)</li>
                <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Valor Aprovado (R$)</li>
                <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Fornecedor com Melhor Preço</li>
                <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Número de Cotações Recebidas</li>
                <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Data da Cotação</li>
                <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Justificativa da Escolha</li>
            </ul>
        </div>
        <div style="background: rgba(255,255,255,0.97); padding: 2rem 1.2rem; border-radius: 16px; box-shadow: 0 2px 16px rgba(0,0,0,0.08); font-size: 1.05rem;">
            <h4 style="margin-top: 0.5rem; margin-bottom: 0.7rem; font-weight: 600; color: #263278; text-align: center;">Qualidade e Desempenho</h4>
            <ul style="list-style: none; padding: 0; margin: 0 0 1.2rem 0;">
                <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Avaliação de Qualidade (nota de 1 a 5)</li>
                <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Conformidade com o Serviço Solicitado (Sim / Não)</li>
                <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Observações de Qualidade</li>
                <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Ocorrências ou Reclamações</li>
                <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Índice de Satisfação</li>
            </ul>
        </div>
    </div>
    <div style="display: flex; flex-direction: column; align-items: center; min-width: 270px; max-width: 350px;">
        <div class="home-img-center">
            <img src="/images/total360.png" alt="Logo" class="img-fluid" />
        </div>
        <div style="background: rgba(255,255,255,0.97); padding: 2rem 1.2rem; border-radius: 16px; box-shadow: 0 2px 16px rgba(0,0,0,0.08); font-size: 1.05rem; min-width: 270px; max-width: 350px; margin-top: 2vw;">
            <h4 style="margin-top: 0.5rem; margin-bottom: 0.7rem; font-weight: 600; color: #263278; text-align: center;">Acompanhamento e Prazos</h4>
            <ul style="list-style: none; padding: 0; margin: 0 0 1.2rem 0;">
                <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Prazo Acordado (em dias)</li>
                <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Dias de Atraso</li>
                <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Entrega Parcial? (Sim / Não)</li>
                <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Última Atualização</li>
                <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Checkpoints de Acompanhamento</li>
            </ul>
        </div>
    </div>
    <div style="background: rgba(255,255,255,0.97); padding: 2rem 1.2rem; border-radius: 16px; box-shadow: 0 2px 16px rgba(0,0,0,0.08); font-size: 1.05rem; min-width: 270px; max-width: 350px;">
        <h4 style="margin-top: 0.5rem; margin-bottom: 0.7rem; font-weight: 600; color: #263278; text-align: center;">Informações Gerais do Serviço</h4>
        <ul style="list-style: none; padding: 0; margin: 0 0 1.2rem 0;">
            <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Serviço Contratado</li>
            <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Fornecedor / Terceirizado</li>
            <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Categoria do Serviço (ex: elétrica, limpeza, TI)</li>
            <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Descrição Detalhada do Serviço</li>
            <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Data da Solicitação</li>
            <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Data de Início Prevista</li>
            <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Data de Conclusão Prevista</li>
            <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Data de Entrega Real</li>
            <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Status do Serviço (ex: Pendente, Em andamento, Concluído, Atrasado)</li>
            <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Responsável Interno</li>
        </ul>
    </div>
    <div style="background: rgba(255,255,255,0.97); padding: 2rem 1.2rem; border-radius: 16px; box-shadow: 0 2px 16px rgba(0,0,0,0.08); font-size: 1.05rem; min-width: 270px; max-width: 350px; margin-top: 2vw;">
        <h4 style="margin-top: 0.5rem; margin-bottom: 0.7rem; font-weight: 600; color: #263278; text-align: center;">Faturamento e Pagamento</h4>
        <ul style="list-style: none; padding: 0; margin: 0 0 1.2rem 0;">
            <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Status de Faturamento (Faturado / Pendente / Em Revisão)</li>
            <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Data da Fatura</li>
            <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Valor Faturado (R$)</li>
            <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Data de Pagamento Prevista</li>
            <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Data de Pagamento Real</li>
            <li style="font-size: 1.04rem; margin-bottom: 0.5rem; color: #333; font-weight: 500; background: #e3e7fa; border-radius: 8px; padding: 0.45rem 0.8rem; display: block;">Observações Financeiras</li>
        </ul>
    </div>
</div>
