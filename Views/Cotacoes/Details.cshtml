@model ProjetoCSharpWeb.Models.Cotacao
@{
    ViewData["Title"] = "Detalhes da Cotação";
}
<h2>Detalhes da Cotação</h2>
<div>
    <dl class="row">
        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>
        <dt class="col-sm-2">Fornecedor</dt>
        <dd class="col-sm-10">@Model.Fornecedor?.Nome</dd>
        <dt class="col-sm-2">Valor</dt>
        <dd class="col-sm-10">@Model.Valor.ToString("C")</dd>
        <dt class="col-sm-2">Aprovação</dt>
        <dd class="col-sm-10">@(Model.Aprovacao == 1 ? "Aprovado" : Model.Aprovacao == 2 ? "Não Aprovado" : "Pendente")</dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
</div>
