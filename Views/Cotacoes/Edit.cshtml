@model ProjetoCSharpWeb.Models.Cotacao
@{
    ViewData["Title"] = "Editar Cotação";
}
<h2>Editar Cotação</h2>
@if (TempData["valorDebug"] != null)
{
    <div class="alert alert-info">@TempData["valorDebug"]</div>
}
<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Descricao"></label>
        <input asp-for="Descricao" class="form-control" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FornecedorId">Fornecedor</label>
        <select asp-for="FornecedorId" class="form-control" asp-items="ViewBag.FornecedorId"></select>
        <span asp-validation-for="FornecedorId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Valor"></label>
        <input name="Valor" id="Valor" class="form-control" type="text" value="@(Model.Valor.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture))" />
        <span asp-validation-for="Valor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Aprovacao">Aprovação</label>
        <select asp-for="Aprovacao" class="form-control">
            <option value="0">Pendente</option>
            <option value="1">Aprovado</option>
            <option value="2">Não Aprovado</option>
        </select>
        <span asp-validation-for="Aprovacao" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
